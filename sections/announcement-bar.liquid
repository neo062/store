{% for block in section.blocks %}
  <div class="text-center" style="background-color:{{ block.settings.bg_color }};  color:{{ block.settings.text_color }}">
    {{ block.settings.text }}
  </div>
{% endfor %}

{% schema %}
  {
    "name": "Announcement Bar",
    "max_blocks": 12,
    "blocks": [
      {
        "type": "announcement",
        "name": "t:sections.announcement-bar.blocks.announcement.name",
        "settings": [
          {
            "type": "richtext",
            "id": "text",
            "label": "Text"
          }, {
            "type": "color",
            "id": "bg_color",
            "label": "Background color",
            "default": "#fff"

          }, {
            "type": "color",
            "id": "text_color",
            "label": "Color",
            "default": "#000"
          }


        ]
      }
    ]

  }
{% endschema %}