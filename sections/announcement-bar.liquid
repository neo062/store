{% for block in section.blocks %}
  <div class="{{ section.settings.text_align }}" style="background-color:{{ block.settings.bg_color }};  color:{{ block.settings.text_color }}">
    {{ block.settings.text }}
  </div>
{% endfor %}

{% schema %}
  {
    "name": "Announcement Bar",
    "max_blocks": 12,
    "blocks": [
      {
        "type": "announcement",
        "name": "t:sections.announcement-bar.blocks.announcement.name",
        "settings": [
          {
            "type": "select",
            "id": "text_align",
            "label": "Text alignment",
            "options": [
              {
                "value": "text-left",
                "label": "Text left"
              }, {
                "value": "text-center",
                "label": "Text center"
              }, {
                "value": "text-right",
                "label": "Text right"
              }
            ]
          }


        ]
      }
    ]

  }
{% endschema %}