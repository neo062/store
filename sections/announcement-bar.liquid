{% for block in section.block %}
  <div style="background-color:{{ block.settings.bg_color }};  color:{{ block.setting.text_color }}">
    {{ block.settings.text }}
  </div>
{% endfor %}

{% schema %}
  {
    "name": "t:sections.announcement-bar.name",
    "max_blocks": 12,
    "class": "announcement-bar-section",
    "blocks": [
      {
        "type": "announcement",
        "name": "t:sections.announcement-bar.blocks.announcement.name",
        "settings": [
          {
            "type": "richtext",
            "id": "text",
            "label": "Text"
          }, {
            "type": "color",
            "id": "bg_color",
            "label": "Background color",
            "default": "#fff"

          }, {
            "type": "color",
            "id": "text_color",
            "label": "Color",
            "default": "#000"
          }


        ]
      }
    ],
    "default": {
      "blocks": [
        {
          "type": "announcement"
        }
      ]
    }
  }
{% endschema %}